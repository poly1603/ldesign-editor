{
  "name": "@ldesign/editor-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "LDesign Editor Monorepo - 功能强大的现代化富文本编辑器",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @ldesign/editor-playground dev",
    "build": "pnpm build:core && pnpm build:vue",
    "build:core": "pnpm --filter @ldesign/editor-core build",
    "build:vue": "pnpm --filter @ldesign/editor-vue build",
    "test": "pnpm -r --filter \"@ldesign/editor-*\" test",
    "test:unit": "pnpm -r --filter \"@ldesign/editor-*\" test:unit",
    "clean": "pnpm -r exec rimraf dist node_modules",
    "lint": "pnpm -r --filter \"@ldesign/editor-*\" lint",
    "lint:fix": "pnpm -r --filter \"@ldesign/editor-*\" lint:fix",
    "type-check": "pnpm -r --filter \"@ldesign/editor-*\" type-check"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "monorepo",
    "vue",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "libraries/editor"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.0",
    "vite": "^5.0.0"
  }
}
