{
  "name": "@ldesign/editor-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "LDesign Editor Monorepo - 功能强大的现代化富文本编辑器",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" build",
    "build:core": "pnpm --filter @ldesign/editor-core build",
    "build:vue": "pnpm --filter @ldesign/editor-vue build",
    "build:react": "pnpm --filter @ldesign/editor-react build",
    "build:angular": "pnpm --filter @ldesign/editor-angular build",
    "build:solid": "pnpm --filter @ldesign/editor-solid build",
    "build:svelte": "pnpm --filter @ldesign/editor-svelte build",
    "build:qwik": "pnpm --filter @ldesign/editor-qwik build",
    "build:preact": "pnpm --filter @ldesign/editor-preact build",
    "build:all": "pnpm build:core && pnpm build:vue && pnpm build:react && pnpm build:angular && pnpm build:solid && pnpm build:svelte && pnpm build:qwik && pnpm build:preact",
    "demo:core": "pnpm --filter @ldesign/editor-core-demo dev",
    "demo:vue": "pnpm --filter @ldesign/editor-vue-demo dev",
    "demo:react": "pnpm --filter @ldesign/editor-react-demo dev",
    "demo:angular": "pnpm --filter @ldesign/editor-angular-demo dev",
    "demo:solid": "pnpm --filter @ldesign/editor-solid-demo dev",
    "demo:svelte": "pnpm --filter @ldesign/editor-svelte-demo dev",
    "demo:qwik": "pnpm --filter @ldesign/editor-qwik-demo dev",
    "demo:preact": "pnpm --filter @ldesign/editor-preact-demo dev",
    "test": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" test",
    "test:unit": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" test:unit",
    "test:visual": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" test:visual",
    "test:perf": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" test:perf",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "lint": "pnpm -r --filter \"@ldesign/editor-*\" lint",
    "lint:fix": "pnpm -r --filter \"@ldesign/editor-*\" lint:fix",
    "type-check": "pnpm -r --filter \"@ldesign/editor-*\" type-check",
    "docs:dev": "pnpm --filter @ldesign/editor-docs docs:dev",
    "docs:build": "pnpm --filter @ldesign/editor-docs docs:build",
    "docs:preview": "pnpm --filter @ldesign/editor-docs docs:preview",
    "publish:all": "pnpm build:all && pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" --filter \"!*-docs\" publish"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "monorepo",
    "vue",
    "react",
    "lit",
    "web-components",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "libraries/editor"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.0",
    "vite": "^5.0.0"
  }
}
