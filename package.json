{
  "name": "@ldesign/editor-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "LDesign Editor Monorepo - 功能强大的现代化富文本编辑器",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" build",
    "build:core": "pnpm --filter @ldesign/editor-core build",
    "build:vue": "pnpm --filter @ldesign/editor-vue build",
    "build:react": "pnpm --filter @ldesign/editor-react build",
    "build:lit": "pnpm --filter @ldesign/editor-lit build",
    "build:all": "pnpm build:core && pnpm build:vue && pnpm build:react && pnpm build:lit",
    "demo:core": "pnpm --filter @ldesign/editor-core-demo dev",
    "demo:vue": "pnpm --filter @ldesign/editor-vue-demo dev",
    "demo:react": "pnpm --filter @ldesign/editor-react-demo dev",
    "demo:lit": "pnpm --filter @ldesign/editor-lit-demo dev",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "type-check": "pnpm -r exec tsc --noEmit",
    "publish:all": "pnpm build:all && pnpm -r --filter \"@ldesign/editor-*\" --filter \"!*-demo\" publish"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "monorepo",
    "vue",
    "react",
    "lit",
    "web-components",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "libraries/editor"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.0",
    "vite": "^5.0.0"
  }
}
