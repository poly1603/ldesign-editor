  "scripts": {
    "dev": "ldesign-builder build --watch --config .ldesign/builder.config.ts",
    "build": "ldesign-builder build --config .ldesign/builder.config.ts",
    "build:clean": "ldesign-builder clean && ldesign-builder build --config .ldesign/builder.config.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:visual": "playwright test",
    "test:perf": "vitest bench",
