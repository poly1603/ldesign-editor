{
  "name": "@ldesign/editor-core",
  "version": "2.0.0",
  "description": "LDesign Editor 核心库 - 框架无关的编辑器核心功能",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "ldesign-builder build --watch --config .ldesign/builder.config.ts",
    "build": "ldesign-builder build --config .ldesign/builder.config.ts",
    "build:clean": "ldesign-builder clean && ldesign-builder build --config .ldesign/builder.config.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "core",
    "framework-agnostic",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "libraries/editor/packages/core"
  },
  "dependencies": {},
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {}
}

