{
  "name": "@ldesign/editor-lit",
  "version": "2.0.0",
  "description": "LDesign Editor Lit Web Component 封装",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "ldesign-builder build --watch --config .ldesign/builder.config.ts",
    "build": "ldesign-builder build --config .ldesign/builder.config.ts",
    "build:clean": "ldesign-builder clean && ldesign-builder build --config .ldesign/builder.config.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "editor",
    "lit",
    "web-components",
    "rich-text",
    "wysiwyg"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "dependencies": {
    "@ldesign/editor-core": "workspace:*",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  }
}

